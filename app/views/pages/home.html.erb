<div class="container-sm">
  <div class="row">
    <div class="col">
      <% if user_signed_in? %>
          <%= form_with url: category_list_activities_path, method: :get, class: "searchbar d-flex align-items-center my-2" do %>
            <%= text_field_tag :query,
                  params[:query],
                  placeholder: "Where are you going?",
                  style: "width: 250px",
                  class: "flex-grow-1 search-input"
              %>
            <%= submit_tag "Go", name: "", class: "btn btn-primary" %>
          <% end %>
      <% else %>
        <div>
          <%= link_to "Sign up", new_user_registration_path, class: "link-color btn small-btn" %>
          <%= link_to "Sign in", new_user_session_path, class: "link-color btn small-btn btn-outline" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
   <div class="d-flex justify-content-center my-5 py-5">
    <div class="parent">
      <div class="circle" id="sample-text">
      <% if @random_activity.photo.attached? %>
        <%= cl_image_tag @random_activity.photo.key %>
      <% end %>
