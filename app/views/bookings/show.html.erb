<div class="container-sm">
  <div class="row">
    <div class="col-4">
      <%= link_to "◀︎ Back to bookings", bookings_path %>
    </div>
      <table class="table table-sm table-striped" >
        <thead class="thead-dark">
          <tr>
            <th>Booking</th>
            <th>Address</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @booking.activity.name %></td>
            <td><%= @booking.activity.address %></td>
            <td><%= @booking.status.present? ? @booking.status : "pending" %></td>
            <td style="text-align:center">
              <button type="submit" name="action" value="edit"><%= link_to "Edit", edit_booking_path(@booking), class: "link-color btn" %></button>
              <button type="submit" name="action" value="delete"><%= link_to "Delete", booking_path(@booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "link-color btn" %></button>
            </td>
          </tr>
        </tbody>
      </table>

      <table class="table table-sm table-striped" >
        <thead class="thead-dark">
          <tr>
            <th>Participant</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @booking.participations.each_with_index do |participation, index| %>
            <% status = index == 0 ? "No reply 🤷‍♀️" : ["Coming! 💃", "No reply 🤷‍♀️", "Tentative 🧐"].sample(1).sole %>
            <tr>
              <td>
                <div class="container-photo-round-booking">
                  <%= cl_image_tag participation.user.photo.key %>
                </div>
              </td>
              <td style="font-size:20px;"><%= status %></td>
              <td><button><%= "Send a message" %></button></td>
              <% end %>
            </tr>
        </tbody>
      </table>
  </div>
</div>
