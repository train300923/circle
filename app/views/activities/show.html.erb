<div class="container">
  <h1><strong>Here is your detailed choice</strong></h1>
  <div class="container_photo">
    <%= cl_image_tag @activity.photo.key if @activity.photo.attached? %>
  </div>
  <div class="row">
    <strong><%= "#{@activity.name}" %></strong>
    <%= "#{@activity.description}" %>
  </div>
  <div class="row" id="btn-link">
    <%= link_to "Back", activities_path, class: "btn small-btn" %>
    <%= link_to "Choose", activities_path, class: "btn small-btn" %>
  </div>
  <div class="row" id="row-sub">
    <p justify-content="center" mt-30>
      Reservation details:<br>
      <%= "Date: 20/02/2024"%><br>
      <%= "Time: 15h20"%><br>
    </p>
  <div class="mt-60 ms-5">
    <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
